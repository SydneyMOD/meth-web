body
	background-color: #fefefe

.navbar
	margin-bottom: 0

.search-box
	padding: 0 10rem
	margin: 2rem 0

.center
	text-align: center
	width: 90%
	margin: 0 auto

.markdown
	margin: 0 5rem

// Command prompt window
.cmd
	width: 80%
	box-shadow: 0px 0px 10px
	margin: 5rem auto
	&>.title-bar
		background-color: #fff
		color: #000
		display: flex
		justify-content: flex-end
		padding: .5rem 1rem
		user-select: none
		&>div
			cursor: default
			margin: 0 1rem
	&>.text-area
		background-color: #000
		color: #fff
		padding: 1.5rem 0
		&>p
			margin: 0 0
		for i in 1..3
			&>.tab{i}
				padding-left: i*2rem
		&>.green
			color: #00ff00

table
	text-align: left
	box-shadow: 0px 0px 5px
	&>tbody
		text-align: center